page {
  margin-bottom: 100rpx;
}
.blog-card {
  margin-bottom: 20rpx;
}
.tab {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.tab .tab-item {
  color: #697480;
}
/* 评论列表 */
.comment-list {
  background-color: #fff;
}
.comment-list .comment {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.comment-list .comment .comment-title {
  display: flex;
  align-items: center;
}
.comment-list .comment .comment-title .comment-portrait {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comment-list .comment .comment-title .comment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.comment-list .comment .comment-title .comment-info .comment-nickname {
  font-size: 32rpx;
}
.comment-list .comment .comment-title .comment-info .comment-time {
  font-size: 24rpx;
  color: #939393;
}
.comment-list .comment .comment-content {
  font-size: 36rpx;
  line-height: 1.4;
  font-weight: 500;
  padding: 10rpx 0;
}
.blog-ctrl {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}
