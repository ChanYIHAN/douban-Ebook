page {
  background-color: var(--backColor);
  border-top: 1px solid #d6d6d6;
}
.btn_wrap {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background-color: #fff;
}
.btn_wrap .iconfont {
  height: 100rpx;
  width: 100rpx;
  min-width: 100rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn_wrap .iconfont .cover {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #c1c1c1;
  opacity: 0.1;
  border-radius: 50%;
  border-bottom: 1rpx solid #000;
}
.btn_wrap .iconfont:hover .cover {
  background-color: black;
}
.btn_wrap input {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  border: 1rpx solid red;
  transition: all 1s 1s ease-in;
}
